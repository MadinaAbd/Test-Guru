<div class="row justify-content-centr mt-3">
  <div class="col col-md-4">
    <h><%= t('.header') %></h>

    <div class="card-border-primary">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <p>
              <%= f.label :password %>
              <%= f.email_field :email, autofocus: true, class: 'form-control', placrholder: 'Enter email' %>
            </p>

            <p>
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "of", class: 'form-control' %>
            </p>

            <% if devise_mapping.rememberable? %>
              <div class="form-check">
                <%= f.label :remember_me, class: 'form-check-label' do %>
                  <%= f.check_box :remember_me, class: 'form-check-input' %>
                  <%= t('.remember_me') %>
                 <% end %>
              </div>
            <% end %>

            <%= f.submit "Enter", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-1">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
