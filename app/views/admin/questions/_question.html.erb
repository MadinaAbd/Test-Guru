<tr>
  <td><%= question.body %></td>
  <td><%= link_to t('.show'), admin_question_path(question), class: 'btn btn-outline-primary' %></td>
  <td><%= link_to t('.edit'), edit_admin_question_path(question), class: 'btn btn-outline-primary' %></td>
  <td><%= link_to t('.delete'),
                admin_question_path(question),
                class: 'btn btn-outline-primary',
                method: :delete,
                data: { confirm: t('.delete_congirm') } %></td>
</tr>
