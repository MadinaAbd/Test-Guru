<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
    <p class="nav user"> <b> <%= link_to 'Test Guru', tests_path, method: :get %> </b></p>
    <p class="nav user">Добро пожaловать, <b><%= current_user.name %></b>. </p>
    <p class="nav user"><%= link_to 'Выйти', logout_path, method: :delete %> </p>

    <% else %>
    <p class="nav guest"> <b> <%= link_to 'Test Guru', tests_path, method: :get %> </b></p>
    <p class="nav guest"><%= link_to 'Зарегистрироваться', signup_path, method: :get %>
    <% end %>

    <%= yield %>

    <%= render 'shared/footer' %>
  </body>
</html>
