<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <p class='nav user_tg'><b><%= link_to 'Test Guru', tests_path %></b></p>
      <p class='nav user_welcome'>
        <%= t('.welcome') %>, <b><%= current_user.name %></b></p>
        <%= link_to t('.logout'), destroy_user_session_path, data: {turbo_method: :delete} %>
      </p>
  <% end %>

    <%= yield %>

    <%= render 'shared/flash' %>
    <%= render 'shared/footer' %>
  </body>
</html>
